# Usa una imagen de Node.js
FROM node:18-alpine

# Establece el directorio de trabajo en /app
WORKDIR /app

# Copia el package.json e instala JSON Server
COPY docker/backend/package.json ./
RUN npm install
RUN npm cache clean --force

# Copia el archivo db.json y el resto del c√≥digo fuente
COPY db.json .

# Expone el puerto 3000
EXPOSE 3000

# Comando para iniciar JSON Server
CMD ["npx", "json-server", "--watch", "db.json", "--host", "0.0.0.0", "--port", "3000"]

RUN chmod -R 777 /app
RUN npm cache clean --force
